<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:title="Dati cliente"
        app:titleTextColor="@android:color/white"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="30dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/nomeU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/nomeEditTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/nome"
                android:singleLine="true"
                android:textSize="14sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/cognomeU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nomeU">

            <EditText
                android:id="@+id/cognomeEditTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/cognome"
                android:singleLine="true"
                android:textSize="14sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/TelefonoU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cognomeU">

            <EditText
                android:id="@+id/telefonoEditTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/tel"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="14sp" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/oracView"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignBottom="@id/oraconsegnaLayout"
            android:layout_height="wrap_content"
            android:layout_below="@id/TelefonoU"
            android:text="OraConsegna:" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/oraconsegnaLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TelefonoU">

            <EditText
                android:id="@+id/oraconsegnaEditTxt"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:hint="OO"
                android:inputType="number"
                android:textSize="14sp"
                android:layout_marginLeft="100dp"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignBottom="@id/oraconsegnaLayout"
            android:layout_height="wrap_content"
            android:layout_below="@id/TelefonoU"
            android:text=" : "
            android:layout_marginLeft="150dp"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/minconsegnaLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TelefonoU"
            android:layout_marginLeft="160dp">

            <EditText
                android:id="@+id/minconsegnaEditTxt"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:hint="mm"
                android:inputType="number"
                android:textSize="14sp" />
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/saveBtn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/oraconsegnaLayout"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/salva"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

    </RelativeLayout>
</RelativeLayout>