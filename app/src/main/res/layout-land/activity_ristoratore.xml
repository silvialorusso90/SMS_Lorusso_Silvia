<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RistoratoreActivity"
    tools:showIn="@layout/activity_ristoratore"
    android:background="@color/color">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <TextView
        android:id="@+id/txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/ristoratore"
        android:layout_marginTop="20sp"
        android:textSize="36sp"
        android:fontFamily="@font/courgette"
        android:textColor="@color/colorPrimary" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300sp"
        android:layout_height="300sp"
        android:layout_marginLeft="10sp"
        android:layout_below="@id/txtView"
        app:srcCompat="@drawable/rist"  />

    <Button
        android:id="@+id/button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="430sp"
        android:layout_marginTop="130sp"
        android:background="@color/colorPrimary"
        android:onClick="lanciaVisualizzaMenu"
        android:text="@string/visualizza_menu"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button1"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="430sp"
        android:layout_below="@id/button"
        android:layout_marginTop="5sp"
        android:onClick="lanciaModificaMenu"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:text="@string/modifica_menu" />

    <Button
        android:id="@+id/button2"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button1"
        android:layout_marginLeft="430sp"
        android:layout_marginTop="5sp"
        android:onClick="lanciaVisualizzaComande"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:text="@string/visualizza_comande" />

</RelativeLayout>