<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Modifica_menu_activity"
    android:background="@color/colorAccent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250sp"
        android:layout_height="250sp"
        android:layout_marginTop="40sp"
        android:layout_marginLeft="50sp"
        app:srcCompat="@drawable/menu"  />

    <Button
        android:id="@+id/button1"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:onClick="lanciaAggiungiPiatto"
        android:text="@string/aggiungi_piatto"
        android:layout_marginLeft="430sp"
        android:layout_marginTop="110sp"
        android:background="@color/color1"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button1"
        android:layout_marginLeft="430sp"
        android:layout_marginTop="5sp"
        android:onClick="lanciaRimuoviPiatto"
        android:background="@color/color1"
        android:textColor="@android:color/white"
        android:text="@string/rimuovi_piatto"
        android:textSize="14sp" />

</RelativeLayout>