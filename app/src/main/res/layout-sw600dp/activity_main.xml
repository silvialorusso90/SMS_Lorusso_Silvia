<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:fontFamily="@font/courgette"
        android:text="@string/take_away"
        android:textColor="@color/color1"
        android:layout_centerHorizontal="true"
        android:textSize="72sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="500sp"
        android:layout_height="500sp"
        android:layout_marginTop="30sp"
        android:layout_below="@id/textView"
        android:layout_marginLeft="50sp"
        app:srcCompat="@drawable/chef" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350sp"
        android:layout_marginLeft="650sp"
        android:fontFamily="@font/courgette"
        android:text="@string/chi_usa"
        android:textColor="@color/color1"
        android:textSize="32sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:layout_marginLeft="700sp"
        android:layout_marginTop="10sp"
        android:background="@color/color1"
        android:textSize="24sp"
        android:onClick="lanciaRistoratoreAxctivity"
        android:text="@string/ristoratore"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button1"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button"
        android:layout_marginLeft="700sp"
        android:layout_marginTop="5sp"
        android:textSize="24sp"
        android:background="@color/color1"
        android:onClick="lanciaClienteActivity"
        android:text="@string/cliente"
        android:textColor="@android:color/white" />
</RelativeLayout>